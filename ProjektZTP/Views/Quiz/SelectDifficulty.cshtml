
@{
    ViewBag.Title = "SelectDifficulty";
}

<h2 style="text-align: center">Select difficulty of this quiz:</h2>
<div style="width: 400px; margin: 0 auto">
    <div>@Html.ActionLink("Easy", "ConfirmDifficulty", "Quiz", new { difficulty = "easy" }, new { @class = "btn btn-success btn-block" })</div>
    <div>@Html.ActionLink("Medium", "ConfirmDifficulty", "Quiz", new { difficulty = "medium" }, new { @class = "btn btn-warning btn-block" })</div>
    <div>@Html.ActionLink("Hard", "ConfirmDifficulty", "Quiz", new { difficulty = "hard" }, new { @class = "btn btn-danger btn-block" })</div>
    <div>@Html.ActionLink("Based on level", "ConfirmDifficulty", "Quiz", new { difficulty = "basedOnLevel" }, new { @class = "btn btn-danger btn-block" })</div>
</div>


